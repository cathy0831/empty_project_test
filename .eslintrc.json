{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "plugin:vue/essential",
    "plugin:tailwindcss/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "tailwindcss/no-custom-classname": "off",
    "no-new": "off"
  },
  "globals": {
    "$": "readonly",
    "Turbo": "readonly",
    "i18n_translations": "readonly",
    "i18n_locale": "readonly",
    "I18n": "readonly"
  }
}
