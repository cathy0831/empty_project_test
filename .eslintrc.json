{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:vue/essential",
    "plugin:tailwindcss/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "tailwindcss/no-custom-classname": "off",
    "no-new": 0,
    "no-useless-escape": 0,
    "constructor-super": 0,
    "camelcase": 0,
    "new-cap": 0
  },
  "globals": {
    "$": "readonly",
    "Turbo": "readonly"
  }
}